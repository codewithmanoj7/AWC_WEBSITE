@page "/site/news"
@page "/site/news/{PageId:int}"

@using AWC.CQRS.Commands.News
@using AWC.CQRS.Queries.News
@using AWC.Infra.Entities.Site

@inject IAuthenticationStateService AuthenticationState
@inject INavigationService NavigationService
@inject IMediator Mediator
@inject ICsvExporterService CsvExporter
@inject IPermissionStylingService PermissionStyling
@layout AuthorizedLayout
@rendermode InteractiveServer
<PageTitle>News</PageTitle>

<RenderPermission Permissions="new[] { UserPermissionsEnum.Administrator, UserPermissionsEnum.ContentManager }"
                  RedirectIfInvalid="true">
    <div class="container news-management-container">

        <!-- Header Section -->
        <div class="page-header-wrapper">
            <div class="row">
                <div class="col-md-6">
                    <div class="page-title">
                        <div class="title-icon">
                            <i class="fa fa-newspaper-o fa-2x"></i>
                        </div>
                        <div class="title-content">
                            <h2 class="title-main">News Management</h2>
                            <p class="title-subtitle">Create and manage your news articles efficiently</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-right">
                    <div class="header-actions">
                        <button class="btn btn-info btn-export" @onclick="ExportToCsv">
                            <i class="fa fa-download"></i>
                            <span>Export CSV</span>
                        </button>
                        <button class="btn btn-primary btn-add" @onclick="@(() => NavigationService.NavigateTo($"/site/news/create"))">
                            <i class="fa fa-plus-circle"></i>
                            <span>Add News</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search & Filters Card -->
        <div class="search-filters-card">
            <div class="card-content">
                <div class="row">
                    <div class="col-md-8">
                        <div class="search-wrapper">
                            <div class="search-icon">
                                <i class="fa fa-search"></i>
                            </div>
                            <input type="text" class="form-control search-input"
                                   placeholder="Search news by title or description..."
                                   @bind="_searchTerm" @oninput="OnSearchInputChanged" />
                        </div>
                    </div>

                    <div class="col-md-4 text-right">
                        <div class="dropdown filter-dropdown">
                            <button class="btn btn-default dropdown-toggle filter-btn"
                                    type="button" data-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-filter"></i> <span>Filters</span>
                                <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu dropdown-menu-right filter-menu">
                                <li class="filter-header">
                                    <i class="fa fa-calendar"></i>
                                    <span>Filter by Publish Date</span>
                                </li>
                                <li class="filter-item">
                                    <label class="filter-label">
                                        <i class="fa fa-calendar-plus-o"></i> Published From
                                    </label>
                                    <input type="date" class="form-control date-input"
                                           value="@(_publishedFrom?.ToString("yyyy-MM-dd") ?? "")"
                                           @onchange="@(e => SetPublishedFrom(e))" />
                                </li>
                                <li class="filter-item">
                                    <label class="filter-label">
                                        <i class="fa fa-calendar-minus-o"></i> Published To
                                    </label>
                                    <input type="date" class="form-control date-input"
                                           value="@(_publishedTo?.ToString("yyyy-MM-dd") ?? "")"
                                           @onchange="@(e => SetPublishedTo(e))" />
                                </li>
                                <li class="divider"></li>
                                <li class="filter-actions text-center">
                                    <button type="button" class="btn btn-danger btn-sm"
                                            @onclick="ClearDateFilters">
                                        <i class="fa fa-times-circle"></i> Clear Filters
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alert Component -->
        <DismissibleAlert @ref="_alert" class="dismissible-alert-wrapper" />

        <!-- Results Summary -->
        @{
            var numFrom = (PageId - 1) * ItemsPerPage + 1;
            var numTo = (PageId * ItemsPerPage) > _itemCount ? _itemCount : (PageId * ItemsPerPage);
        }
        <div class="results-summary">
            <div class="summary-icon">
                <i class="fa fa-info-circle"></i>
            </div>
            <div class="summary-text">
                Displaying <strong>@numFrom - @numTo</strong> of <strong>@_itemCount</strong> news articles
            </div>
        </div>

        <!-- Active Filters -->
        @if (_publishedFrom.HasValue || _publishedTo.HasValue)
        {
            <div class="active-filters">
                <div class="filter-icon">
                    <i class="fa fa-filter"></i>
                </div>
                <div class="filter-text">
                    Filtering news by publish date:
                    @(_publishedFrom.HasValue ? $"from {_publishedFrom.Value:yyyy-MM-dd}" : "")
                    @(_publishedTo.HasValue ? $" to {_publishedTo.Value:yyyy-MM-dd}" : "")
                </div>
                <button class="btn btn-sm btn-clear-filter" @onclick="ClearDateFilters">
                    <i class="fa fa-times"></i>
                    Clear
                </button>
            </div>
        }

        <!-- News Cards Grid -->
        @if (_newsList.Count > 0)
        {
            <div class="news-grid">
                @foreach (var item in _newsList)
                {
                    <div class="news-card-wrapper">
                        <div class="news-card">
                            <!-- News Image -->
                            <div class="news-image">
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="@item.Image" alt="@item.Name" class="card-image" />
                                }
                                else
                                {
                                    <div class="placeholder-image">
                                        <i class="fa fa-newspaper-o fa-3x"></i>
                                    </div>
                                }
                            </div>

                            <!-- News Header -->
                            <div class="news-header">
                                <div class="news-title">
                                    <h4>@item.Name</h4>
                                </div>
                                <div class="news-date-badge">
                                    <i class="fa fa-calendar-o"></i>
                                    <span>@item.CreatedAt.ToString("MMM dd")</span>
                                </div>
                            </div>

                            <!-- News Body -->
                            <div class="news-body">
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <div class="news-description">
                                        <p>@(item.Description.Length > 120 ? item.Description.Substring(0, 120) + "..." : item.Description)</p>
                                    </div>
                                }

                                <div class="news-detail">
                                    <div class="detail-icon author">
                                        <i class="fa fa-user-o"></i>
                                    </div>
                                    <div class="detail-text">
                                        By @item.CreatedByName
                                    </div>
                                </div>
                            </div>

                            <!-- News Footer -->
                            <div class="news-footer">
                                <div class="news-meta">
                                    <div class="meta-item">
                                        <i class="fa fa-plus-circle"></i>
                                        <span>@item.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    @if (item.UpdatedAt != item.CreatedAt)
                                    {
                                        <div class="meta-item updated">
                                            <i class="fa fa-edit"></i>
                                            <span>Updated: @item.UpdatedAt.ToString("MMM dd")</span>
                                        </div>
                                    }
                                </div>
                                <div class="news-actions">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-actions dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-right action-menu">
                                            <li>
                                                <a href="@($"/site/news/{item.Id}/edit")" class="action-link edit">
                                                    <i class="fa fa-pencil"></i> Edit Article
                                                </a>
                                            </li>
                                            @if (!string.IsNullOrEmpty(item.Image))
                                            {
                                                <li>
                                                    <a href="@item.Image" download class="action-link download">
                                                        <i class="fa fa-download"></i> Download Image
                                                    </a>
                                                </li>
                                            }
                                            <li class="divider"></li>
                                            <li>
                                                <a href="javascript:void(0);" class="action-link delete" @onclick="() => DeleteNews(item.Id)">
                                                    <i class="fa fa-trash"></i> Delete Article
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fa fa-newspaper-o"></i>
                </div>
                <h3 class="empty-title">No news articles found</h3>
                <p class="empty-subtitle">Try adjusting your search criteria or create your first article</p>
                <button class="btn btn-primary btn-create-first" @onclick="@(() => NavigationService.NavigateTo($"/site/news/create"))">
                    <i class="fa fa-plus"></i>
                    <span>Create First Article</span>
                </button>
            </div>
        }

        <!-- Pagination -->
        @if (_newsList.Count > 0)
        {
            <div class="pagination-wrapper">
                <Pagination @ref="_pagination" UrlPagination="/site/news/"
                            PagesBufferRange="@PagesBufferRange" CurrentPage="PageId"
                            CurrentPagesCount="_pagesCount" />
            </div>
        }
    </div>
</RenderPermission>

