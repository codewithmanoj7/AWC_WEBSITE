@page "/auth"
@rendermode InteractiveServer

@layout EmptyLayout

<div class="auth-overlay">
	<div class="auth-group mt-5 mb-5">
		<div class="row justify-content-end">

			<div class="d-flex flex-column align-items-center justify-content-center">
				<div class="auth-box">
					<div class="card">
						<div class="card-body">
							@if (_isLogin)
							{
								<Login />
							}
							else
							{
								<Register />
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@code {
	private bool _isLogin = true;

	private string? RegisterLabelClass => _isLogin ? null : "active";
	private string? LoginLabelClass => _isLogin ? "active" : null;

	private void ToggleView(bool login)
	{
		_isLogin = login;
		StateHasChanged();
	}
}
