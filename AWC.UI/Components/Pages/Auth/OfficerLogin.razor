@* @page "/officer-login"
 *@
@layout EmptyLayout

    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        body {
            background: #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 20px;
        }

        .login-container {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
            max-width: 600px;
            width: 100%;
        }

        h3 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: bold;
        }

        .form-group i {
            position: absolute;
            top: 12px;
            left: 12px;
            color: #999;
        }

        .form-control {
            padding-left: 40px;
            height: 45px;
        }

        .btn {
            font-size: 16px;
            padding: 10px;
        }

        .back-link {
            display: block;
            margin-top: 20px;
            color: #007bff;
            font-size: 16px;
            text-align: left;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>


    <div class="login-container">
        <h3><i class="fa fa-globe"></i> Officer Login</h3>

        <form>
            <div class="form-group has-feedback">
                <i class="fa fa-id-card form-control-feedback"></i>
                <input type="text" class="form-control" placeholder="IC Number" required>
            </div>

            <div class="form-group has-feedback">
                <i class="fa fa-lock form-control-feedback"></i>
                <input type="password" class="form-control" placeholder="Password" required>
            </div>

            <div class="form-group">
                <label for="course">Select Course</label>
                <select class="form-control input-lg" id="course" required>
                    <option disabled selected>Select Course</option>
                    <option>HC Course</option>
                    <option>SC Course</option>
                    <option>JC Course</option>
                    <option>IW Course</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success btn-block"><i class="fa fa-sign-in"></i> Login</button>

            <a href="/auth/login" class="back-link"><i class="fa fa-arrow-left"></i> Back to Student Login</a>
        </form>
    </div>
