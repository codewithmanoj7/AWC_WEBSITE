@page "/auth/login"

@layout EmptyLayout

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 3 CSS -->
    <link rel="stylesheet" href="assets/assets/bootstrap/css/bootstrap.min.css">

    <!-- Font Awesome 4 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        body {
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            padding: 20px;
        }

        .login-container {
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.15);
            max-width: 600px;
            width: 100%;
        }

        .nav-tabs > li > a {
            color: #333;
            font-weight: bold;
            font-size: 18px;
            padding: 12px 20px;
        }

        .nav-tabs > li.active > a {
            background-color: #337ab7;
            color: #fff;
        }

        .form-group i {
            position: absolute;
            top: 12px;
            left: 12px;
            color: #999;
            font-size: 18px;
        }

        .form-control {
            padding-left: 40px;
            height: 50px;
            font-size: 16px;
        }

        label {
            font-size: 16px;
            margin-bottom: 6px;
        }

        .btn {
            font-size: 18px;
            padding: 12px;
        }

        .register-link a:hover {
            color: #0056b3;
            text-decoration: none;
        }


        .bottom-links {
            text-align: left; /* Align to left */
            margin-top: 30px;
            display: flex;
            flex-wrap: wrap; /* Allows wrapping if needed */
            gap: 10px 20px; /* Space between links */
        }

            .bottom-links a {
                color: #337ab7;
                font-size: 16px;
                text-decoration: none;
                white-space: nowrap; /* Keeps text in one line */
            }

                .bottom-links a i {
                    margin-right: 5px;
                }

                .bottom-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="login-container">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#student" role="tab" data-toggle="tab"><i class="fa fa-user"></i> Student Login</a></li>
            <li><a href="#officer" role="tab" data-toggle="tab"><i class="fa fa-globe"></i> International Officer Only</a></li>
        </ul>

        <div class="tab-content" style="margin-top: 25px;">
            <!-- Student Login -->
            <div class="tab-pane fade in active" id="student">
                <form>
                    <div class="form-group has-feedback">
                        <i class="fa fa-id-card form-control-feedback"></i>
                        <input type="text" class="form-control" placeholder="IC Number">
                    </div>
                    <div class="form-group has-feedback">
                        <i class="fa fa-lock form-control-feedback"></i>
                        <input type="password" class="form-control" placeholder="Password">
                    </div>
                    <button class="btn btn-primary btn-block">Login</button>
                </form>
            </div>

            <!-- International Officer Login -->
            <div class="tab-pane fade" id="officer">
                <form>
                    <div class="form-group has-feedback">
                        <i class="fa fa-id-card form-control-feedback"></i>
                        <input type="text" class="form-control" placeholder="IC Number">
                    </div>
                    <div class="form-group has-feedback">
                        <i class="fa fa-lock form-control-feedback"></i>
                        <input type="password" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="course">Select Course</label>
                        <select class="form-control input-lg" id="course">
                            <option disabled selected>Select Course</option>
                            <option>HC Course</option>
                            <option>SC Course</option>
                            <option>JC Course</option>
                            <option>IW Course</option>
                        </select>
                    </div>
                    <button class="btn btn-success btn-block">Login</button>
                </form>
            </div>
        </div>

        <div class="register-link text-left" style="margin-bottom: 10px; font-size: 16px; color: #333;">
            <i class="fa fa-user-plus" style="color: #007bff;"></i>
            <span style="margin-left: 5px;">Don't have an account?</span>
            <a href="/auth/register" style="font-weight: 600; color: #007bff; text-decoration: none; margin-left: 5px;">Register here</a>
        </div>

        <div class="register-link text-left" style="margin-bottom: 20px; font-size: 16px; color: #333;">
            <i class="fa fa-globe" style="color: #28a745;"></i>
            <span style="margin-left: 5px;">International Officer?</span>
            <a href="/officer-login" style="font-weight: 600; color: #28a745; text-decoration: none; margin-left: 5px;">Click here to login</a>
        </div>



        <div class="bottom-links text-left">
            <a href="/about-course"><i class="fa fa-info-circle"></i> About Course</a>
            <a href="/course-instructions"><i class="fa fa-file-text"></i> Joining Instructions</a>
            <a href="/course-material"><i class="fa fa-book"></i> Reading Material</a>
        </div>
    </div>

    <!-- Bootstrap JS + jQuery -->
    <script src="/assets/assets/bootstrap/js/jquery.min.js"></script>
    <script src="/assets/assets/bootstrap/js/bootstrap.min.js"></script>


</body>
</html>
