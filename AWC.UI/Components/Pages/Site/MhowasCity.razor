@page "/mhow-awc"
    <title>Mhow - Army War College Campus</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .hub-header {
            background: #990000;
            color: #fff;
            font-size: 36px;
            text-align: center;
            padding: 20px;
            font-weight: bold;
            letter-spacing: 2px;
            margin-top:6px;
        }

        .back-button-container {
            max-width: 1200px;
            margin: 20px auto 0;
            padding: 0 20px;
            text-align: left;
            margin-bottom: 12px;
        }

        .back-button {
            display: inline-block;
            background-color: #990000;
            color: #fff;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .back-button:hover {
                background-color: #770000;
                text-decoration: none;
                color: #fff;
            }

        body {
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .main-content {
            display: flex;
            gap: 20px;
            background-color: #f9f6e8;
            border: 3px solid #d4c5b9;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .campus-image {
            flex: 0 0 350px;
            border: 2px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
        }

            .campus-image img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .content-section {
            flex: 1;
            padding: 0 20px;
        }

        .content-text {
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
            text-align: justify;
        }

        .publication-panel {
            flex: 0 0 280px;
            background-color: #e8e0d0;
            border: 2px solid #d4c5b9;
            border-radius: 8px;
            padding: 15px;
        }

        .publication-header {
            background-color: #8B4513;
            color: white;
            padding: 10px;
            margin: -15px -15px 15px -15px;
            text-align: center;
            font-weight: bold;
            font-size: 16px;
        }

        .publication-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }

        .pub-button {
            background-color: #4a5d23;
            color: white;
            border: none;
            padding: 12px 8px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 11px;
            font-weight: bold;
            text-align: center;
            transition: background-color 0.3s;
        }

            .pub-button:hover {
                background-color: #3a4d1a;
            }

        .campus-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .campus-section {
            background-color: white;
            border: 2px solid #4a90e2;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .section-header {
            background-color: #4a5d23;
            color: white;
            padding: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 18px;
        }

        .section-content {
            padding: 20px;
        }

        .section-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        .section-text {
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
            text-align: justify;
        }

        .feature-list {
            list-style: none;
            margin-bottom: 15px;
        }

            .feature-list li {
                padding: 5px 0;
                border-bottom: 1px solid #eee;
                font-size: 13px;
            }

                .feature-list li:before {
                    content: "✓ ";
                    color: #4a5d23;
                    font-weight: bold;
                }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 10px;
            margin-top: 15px;
        }

        .stat-item {
            background-color: #4a5d23;
            color: white;
            padding: 15px 10px;
            border-radius: 5px;
            text-align: center;
            font-size: 12px;
            font-weight: bold;
        }

        .stat-number {
            font-size: 20px;
            display: block;
            margin-bottom: 5px;
        }

        .amenities-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 15px;
        }

        .amenity-item {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .amenity-icon {
            font-size: 24px;
            margin-bottom: 8px;
        }

        .amenity-name {
            font-size: 12px;
            font-weight: bold;
        }

    </style>


    <div class="hub-header">MHOW - ARMY WAR COLLEGE</div>

    <div class="back-button-container">
        <a href="javascript:history.back()" class="back-button">
            ← Back
        </a>
    </div>

    <div class="container">
        <div class="main-content">
            <div class="campus-image">
                <img src="assets/images/auth-bg.jpg" alt="Army War College Mhow">
            </div>

            <div class="content-section">
                <p class="content-text">
                    The Army War College, Mhow (AWC) is a premier defence service training and research institution of the Indian Army located in Mhow, Madhya Pradesh. It stands as one of India's most prestigious military educational establishments.
                </p>

                <p class="content-text">
                    AWC is a premier training institute of warfare and carries out research in tactics, logistics, contemporary military studies and improvement in military doctrine. The college serves as a cornerstone for strategic military education in India.
                </p>

                <p class="content-text">
                    The college trains about 2500-3000 officers of the Indian Armed Forces, as well as paramilitary forces each year, making it one of the largest military training institutions in the country with comprehensive facilities and expert faculty.
                </p>
            </div>

            <div class="publication-panel">
                <div class="publication-header">
                    COLLEGE RESOURCES
                </div>

                <div class="publication-buttons">
                    <button class="pub-button">📚 TACTICAL STUDIES</button>
                    <button class="pub-button">🎯 WARFARE TRAINING</button>
                    <button class="pub-button">📖 DOCTRINE RESEARCH</button>
                    <button class="pub-button">🗞️ MILITARY JOURNAL</button>
                    <button class="pub-button">📰 STRATEGIC PAPERS</button>
                    <button class="pub-button">📋 COLLEGE BULLETIN</button>
                </div>
            </div>
        </div>

        <div class="campus-sections">
            <div class="campus-section">
                <div class="section-header">
                    TRAINING FACILITIES
                </div>
                <div class="section-content">
                    <img src="https://images.unsplash.com/photo-1562774053-701939374585?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Training Facilities" class="section-image">

                    <p class="section-text">
                        Our world-class training facilities provide comprehensive military education with state-of-the-art simulation centers, tactical training grounds, and advanced learning environments.
                    </p>

                    <ul class="feature-list">
                        <li>Advanced Simulation Centers</li>
                        <li>Tactical Training Grounds</li>
                        <li>War Gaming Facilities</li>
                        <li>Digital Combat Training</li>
                        <li>Strategic Planning Rooms</li>
                        <li>Military History Archives</li>
                    </ul>
                </div>
            </div>

            <div class="campus-section">
                <div class="section-header">
                    ANNUAL STATISTICS
                </div>
                <div class="section-content">
                    <img src="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Training Statistics" class="section-image">

                    <p class="section-text">
                        The Army War College trains thousands of officers annually across various branches of the Indian Armed Forces and paramilitary organizations.
                    </p>

                    <div class="stats-grid">
                        <div class="stat-item">
                            <span class="stat-number">2500-3000</span>
                            <span>Officers Trained</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">3</span>
                            <span>Armed Forces</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">Multiple</span>
                            <span>Paramilitary</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">Premier</span>
                            <span>Institution</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="campus-section">
                <div class="section-header">
                    CAMPUS AMENITIES
                </div>
                <div class="section-content">
                    <img src="https://images.unsplash.com/photo-1555854877-bab0e564b8d5?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Campus Amenities" class="section-image">

                    <p class="section-text">
                        The Mhow campus offers comprehensive amenities to ensure comfortable living and optimal learning environment for all officers and faculty members.
                    </p>

                    <div class="amenities-grid">
                        <div class="amenity-item">
                            <div class="amenity-icon">🏠</div>
                            <div class="amenity-name">Officer Quarters</div>
                        </div>
                        <div class="amenity-item">
                            <div class="amenity-icon">🍽️</div>
                            <div class="amenity-name">Mess Hall</div>
                        </div>
                        <div class="amenity-item">
                            <div class="amenity-icon">🏥</div>
                            <div class="amenity-name">Medical Center</div>
                        </div>
                        <div class="amenity-item">
                            <div class="amenity-icon">📚</div>
                            <div class="amenity-name">Library</div>
                        </div>
                        <div class="amenity-item">
                            <div class="amenity-icon">🏃</div>
                            <div class="amenity-name">Sports Complex</div>
                        </div>
                        <div class="amenity-item">
                            <div class="amenity-icon">🚗</div>
                            <div class="amenity-name">Transport</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
