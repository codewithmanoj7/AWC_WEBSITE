@page "/armywarcollege/campus"

    <title>Knowledge/Publication - Campus Life</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .hub-header {
            background: #990000;
            color: #fff;
            font-size: 26px;
            text-align: center;
            padding: 9px;
            font-weight: bold;
            letter-spacing: 2px;
            margin-top:12px;
        }



        .back-button-container {
            max-width: 1200px;
            margin: 20px auto 0;
            padding: 0 20px;
            text-align: left;
            margin-bottom: 12px;
        }

        .back-button {
            display: inline-block;
            background-color: #990000;
            color: #fff;
            padding: 8px 16px;
            border-radius: 5px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .back-button i {
                margin-right: 6px;
            }

            .back-button:hover {
                background-color: #770000;
                text-decoration: none;
                color: #fff;
            }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .page-title {
            font-size: 24px;
            font-weight: bold;
            text-decoration: underline;
            color: #333;
        }

        .main-content {
            display: flex;
            gap: 20px;
            background-color: #f9f6e8;
            border: 3px solid #d4c5b9;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .campus-image {
            flex: 0 0 350px;
            border: 2px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
        }

            .campus-image img {
                width: 100%;
                height: 250px;
                object-fit: cover;
            }

        .content-section {
            flex: 1;
            padding: 0 20px;
        }

        .content-text {
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
            text-align: justify;
        }

        .publication-panel {
            flex: 0 0 280px;
            background-color: #e8e0d0;
            border: 2px solid #d4c5b9;
            border-radius: 8px;
            padding: 15px;
        }

        .publication-header {
            background-color: #8B4513;
            color: white;
            padding: 10px;
            margin: -15px -15px 15px -15px;
            text-align: center;
            font-weight: bold;
            font-size: 16px;
        }

        .publication-buttons {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }

        .pub-button {
            background-color: #4a5d23;
            color: white;
            border: none;
            padding: 12px 8px;
            border-radius: 3px;
            cursor: pointer;
            font-size: 11px;
            font-weight: bold;
            text-align: center;
            transition: background-color 0.3s;
        }

            .pub-button:hover {
                background-color: #3a4d1a;
            }

        .campus-sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .campus-section {
            background-color: white;
            border: 2px solid #4a90e2;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .section-header {
            background-color: #4a5d23;
            color: white;
            padding: 15px;
            text-align: center;
            font-weight: bold;
            font-size: 18px;
        }

        .section-content {
            padding: 20px;
        }

        .section-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        .section-text {
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 15px;
            text-align: justify;
        }

        .feature-list {
            list-style: none;
            margin-bottom: 15px;
        }

            .feature-list li {
                padding: 5px 0;
                border-bottom: 1px solid #eee;
                font-size: 13px;
            }

                .feature-list li:before {
                    content: "✓ ";
                    color: #4a5d23;
                    font-weight: bold;
                }

        .amenities-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 15px;
        }

        .amenity-item {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .amenity-icon {
            font-size: 24px;
            margin-bottom: 8px;
        }

        .amenity-name {
            font-size: 12px;
            font-weight: bold;
        }

        .sports-activities {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 10px;
            margin-top: 15px;
        }

        .sport-item {
            background-color: #4a5d23;
            color: white;
            padding: 10px;
            border-radius: 5px;
            text-align: center;
            font-size: 12px;
            font-weight: bold;
        }

       </style>

