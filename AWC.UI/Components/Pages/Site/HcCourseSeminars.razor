                box-shadow: 0 8px 25px rgba(0,0,0,0.12);
            }

        .card-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f8f9fa;
        }

        .card-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 1.5rem;
            color: #fff;
        }

        .upcoming .card-icon {
            background: linear-gradient(45deg, #007bff, #0056b3);
        }

        .workshops .card-icon {
            background: linear-gradient(45deg, #28a745, #20c997);
        }

        .guest-lectures .card-icon {
            background: linear-gradient(45deg, #fd7e14, #e83e8c);
        }

        .webinars .card-icon {
            background: linear-gradient(45deg, #6f42c1, #e83e8c);
        }

        .card-title {
            font-size: 1.6rem;
            font-weight: 600;
            color: #2c3e50;
            margin: 0;
        }

        .seminar-item {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            border-left: 3px solid #007bff;
        }

            .seminar-item:last-child {
                margin-bottom: 0;
            }

        .seminar-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .seminar-details {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-bottom: 10px;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .detail-item {
            display: flex;
            align-items: center;
        }

            .detail-item i {
                margin-right: 5px;
                color: #007bff;
            }

        .seminar-description {
            color: #555;
            font-size: 0.95rem;
            margin-bottom: 15px;
        }

        .seminar-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .tag {
            background: #e9ecef;
            color: #495057;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .highlight-box {
            background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
            border: 1px solid #bee5eb;
            border-radius: 8px;
            padding: 20px;
            margin: 30px 0;
        }

            .highlight-box h3 {
                color: #0c5460;
                margin-bottom: 10px;
                font-size: 1.3rem;
            }

            .highlight-box p {
                color: #0c5460;
                margin: 0;
                font-size: 1rem;
            }

        .action-buttons {
            text-align: center;
            margin: 40px 0;
        }

        .btn-primary {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            margin: 0 10px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,123,255,0.3);
            }

        .btn-outline-success {
            border: 2px solid #28a745;
            color: #28a745;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 25px;
            margin: 0 10px;
            background: transparent;
            transition: all 0.3s ease;
        }

            .btn-outline-success:hover {
                background: #28a745;
                color: #fff;
                transform: translateY(-2px);
            }

        .seminar-stats {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            margin: 40px 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            text-align: center;
        }

        .stat-item {
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .stat-number {
            font-size: 2.2rem;
            font-weight: 700;
            color: #28a745;
            margin-bottom: 8px;
            display: block;
        }

        .stat-label {
            font-size: 1rem;
            color: #6c757d;
            margin: 0;
        }

        .registration-form {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            margin: 40px 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #ddd;
        }

    
    </style>

