    <script>
        function showCategory(category) {
            alert(`Showing ${category} category details and current offers!`);
        }

        function showLocation() {
            alert('Opening Google Maps for directions to Kalyani Shop Complex...');
        }

        function updateTime() {
            const now = new Date();
            const options = {
                weekday: 'short',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            };
            document.getElementById('currentTime').textContent = now.toLocaleTimeString('en-US', options);
        }

        function animateVisitorCount() {
            const counter = document.getElementById('visitorCount');
            let count = 2800;
            const target = 2847;

            const increment = () => {
                if (count < target) {
                    count += Math.ceil(Math.random() * 3);
                    counter.textContent = count.toLocaleString();
                    setTimeout(increment, 100);
                }
            };
            increment();
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateTime();
            setInterval(updateTime, 1000);
            setTimeout(animateVisitorCount, 2000);

            // Add click effects to product categories
            document.querySelectorAll('.product-category').forEach(category => {
                category.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-8px) scale(1.02)';
                });

                category.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
        });
    </script>
