@page "/iwcalendar"



    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
            min-height: 100vh;
        }

        .header-banners {
            background: linear-gradient(135deg, #e8f5e8 0%, #f0f8ff 100%);
            padding: 0px 0;
            margin-bottom: 0px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 10px;
        }

            .page-header h1 {
                font-size: 2.8rem;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
            }

            .page-header p {
                font-size: 1.2rem;
                color: #6c757d;
                max-width: 600px;
                margin: 0 auto;
            }

        .calendar-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .calendar-controls {
            background: #fff;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .month-navigation {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .nav-btn {
            background: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .nav-btn:hover {
                background: #0056b3;
                transform: scale(1.1);
            }

        .current-month {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .view-toggles {
            display: flex;
            gap: 10px;
        }

        .view-btn {
            padding: 8px 16px;
            border: 2px solid #007bff;
            background: transparent;
            color: #007bff;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .view-btn.active, .view-btn:hover {
                background: #007bff;
                color: white;
            }

        .calendar-main {
            background: #fff;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background-color: #ddd;
            border-radius: 8px;
            overflow: hidden;
        }

        .calendar-header {
            background: #2c3e50;
            color: white;
            padding: 15px 5px;
            text-align: center;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .calendar-day {
            background: white;
            min-height: 120px;
            padding: 10px 8px;
            position: relative;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

            .calendar-day:hover {
                background: #f8f9fa;
            }

            .calendar-day.other-month {
                background: #f1f3f4;
                color: #9aa0a6;
            }

            .calendar-day.today {
                background: #e3f2fd;
                border: 2px solid #2196f3;
            }

        .day-number {
            font-weight: 600;
            margin-bottom: 5px;
            font-size: 0.9rem;
        }

        .day-events {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .event {
            background: #007bff;
            color: white;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 0.7rem;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        }

            .event.seminar {
                background: #28a745;
            }

            .event.workshop {
                background: #fd7e14;
            }

            .event.lecture {
                background: #6f42c1;
            }

            .event.exam {
                background: #dc3545;
            }

            .event.holiday {
                background: #ffc107;
                color: #333;
            }

        .events-sidebar {
            background: #fff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }

        .sidebar-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 20px;
            border-bottom: 2px solid #f8f9fa;
            padding-bottom: 10px;
        }

        .event-item {
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
            border-left: 4px solid #007bff;
            background: #f8f9fa;
        }

            .event-item.seminar {
                border-left-color: #28a745;
            }

            .event-item.workshop {
                border-left-color: #fd7e14;
            }

            .event-item.lecture {
                border-left-color: #6f42c1;
            }

            .event-item.exam {
                border-left-color: #dc3545;
            }

            .event-item.holiday {
                border-left-color: #ffc107;
            }

        .event-title {
            font-weight: 600;
            margin-bottom: 5px;
            color: #2c3e50;
        }

        .event-details {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .legend {
            background: #fff;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            margin-bottom: 30px;
        }

        .legend-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .legend-items {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .legend-color {
            width: 16px;
            height: 16px;
            border-radius: 3px;
        }



        .college-logo {
            width: 40px;
            height: 40px;
        }

        .college-name {
            font-size: 1.2rem;
            font-weight: 600;
        }


    
    </style>


    <header class="header-banners">
