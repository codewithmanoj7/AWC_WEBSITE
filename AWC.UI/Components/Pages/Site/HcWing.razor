            gap: 0;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            cursor: pointer;
            transition: opacity 0.2s;
            letter-spacing: 0.5px;
        }

