            gap: 25px;
        }

        .sidebar-section {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 5px;
        }

        .sidebar-header {
            background-color: #2d3748;
            color: white;
            padding: 15px 20px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 5px 5px 0 0;
        }

        .sidebar-content {
            padding: 20px;
        }

        .links-list {
            list-style: none;
        }

