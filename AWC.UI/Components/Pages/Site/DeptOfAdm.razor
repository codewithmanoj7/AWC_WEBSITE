            padding: 30px 20px;
        }

        .content-layout {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
        }

        .content-section {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 5px;
            margin-bottom: 25px;
        }

        .section-header {
            background-color: #2d3748;
            color: white;
            padding: 15px 20px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 5px 5px 0 0;
        }

        .section-content {
            padding: 25px;
        }

            .section-content p {
                margin-bottom: 15px;
                text-align: justify;
            }

        .services-list {
            list-style: none;
            margin-top: 20px;
        }

            .services-list li {
                padding: 12px;
                border-bottom: 1px solid #e2e8f0;
                display: flex;
                align-items: center;
            }

