@page "/gsbranchroleandvision"


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #f8f9fa;
            color: #333;
            line-height: 1.6;
        }

        .header-banners {
            background: linear-gradient(135deg, #2c5530 0%, #4a7c59 50%, #2c5530 100%);
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .header-banners::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 40% 80%, rgba(255,255,255,0.1) 0%, transparent 50%);
            }

        .header-content {
            position: relative;
            z-index: 2;
        }

        .header-title {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .header-subtitle {
            font-size: 18px;
            opacity: 0.9;
        }

        .hub-header {
            background: #8B4513;
            color: #fff;
            font-size: 32px;
            text-align: center;
            padding: 15px;
            font-weight: bold;
            letter-spacing: 1px;
            margin-top:6px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
        }

        .back-button-container {
            max-width: 1200px;
            margin: 20px auto 0;
            padding: 0 20px;
        }

        .back-button {
            display: inline-block;
            background-color: #8B4513;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .back-button:hover {
                background-color: #704010;
                text-decoration: none;
                color: #fff;
                transform: translateX(-2px);
            }

        .main-content {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 40px;
            margin-top: 20px;
        }

        .left-section {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        .content-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            border-top: 4px solid #8B4513;
        }

        .card-header {
            background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
            color: white;
            padding: 15px 20px;
            font-size: 18px;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .header-icon {
            width: 30px;
            height: 30px;
            background: rgba(255,255,255,0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
        }

        .card-content {
            padding: 25px;
        }

        .mission-text {
            font-size: 15px;
            margin-bottom: 20px;
            text-align: justify;
        }

        .objectives-list {
            list-style: none;
            margin: 20px 0;
        }

            .objectives-list li {
                padding: 8px 0;
                padding-left: 25px;
                position: relative;
                font-size: 14px;
            }

                .objectives-list li:before {
                    content: '▶';
                    position: absolute;
                    left: 0;
                    color: #8B4513;
                    font-weight: bold;
                }

        .vision-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }

        .vision-item {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid #8B4513;
            text-align: center;
        }

        .vision-icon {
            font-size: 36px;
            margin-bottom: 10px;
            color: #8B4513;
        }

        .vision-title {
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        .vision-desc {
            font-size: 13px;
            color: #666;
        }

        .right-sidebar {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .sidebar-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            border: 2px solid #8B4513;
        }

        .sidebar-header {
            background: linear-gradient(135deg, #2c5530 0%, #4a7c59 100%);
            color: white;
            padding: 12px 15px;
            font-weight: bold;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .sidebar-icon {
            width: 24px;
            height: 24px;
            background: rgba(255,255,255,0.2);
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }

        .sidebar-content {
            padding: 15px;
            font-size: 13px;
            color: #555;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-top: 10px;
        }

        .stat-item {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 4px;
            text-align: center;
            border: 1px solid #e9ecef;
        }

        .stat-number {
            font-size: 18px;
            font-weight: bold;
            color: #8B4513;
        }

        .stat-label {
            font-size: 11px;
            color: #666;
            text-transform: uppercase;
        }

        .contact-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 4px;
            margin-top: 10px;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 8px;
            font-size: 12px;
        }

        .contact-icon {
            width: 16px;
            height: 16px;
            background: #8B4513;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
        }

        .footer {
            background: linear-gradient(135deg, #2c5530 0%, #1a332d 100%);
            color: white;
            padding: 40px 0 20px;
            margin-top: 50px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
        }

        .footer-section h4 {
            margin-bottom: 15px;
            color: #fff;
            font-size: 16px;
        }

        .footer-section ul {
            list-style: none;
        }

        .footer-section li {
            margin-bottom: 8px;
        }

        .footer-section a {
            color: #ccc;
            text-decoration: none;
            font-size: 13px;
            transition: color 0.3s;
        }

            .footer-section a:hover {
                color: #fff;
            }

        .footer-bottom {
            background: #8B4513;
            text-align: center;
            padding: 15px;
            margin-top: 20px;
            font-size: 14px;
        }
    </style>

