@inherits LayoutComponentBase
@inject IAuthenticationStateService AuthenticationState
@inject IPermissionStylingService PermissionStyling

<PageTitle>Army War College, Mhow</PageTitle>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .topbar {
        background-color: #123456;
        color: white;
        padding: 10px 20px;
        font-size: 1.25rem;
        font-weight: bold;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .layout-container {
        display: flex;
        height: calc(100vh - 50px);
    }

    .sidebar {
        width: 230px;
        background-color: #2c3e50;
        color: white;
        padding: 15px;
    }

        .sidebar a {
            color: white;
            display: block;
            padding: 8px 0;
            text-decoration: none;
        }

            .sidebar a:hover {
                background-color: #34495e;
                padding-left: 10px;
            }

    .main-content {
        flex: 1;
        padding: 20px;
        background-color: #f0f2f5;
        overflow-y: auto;
    }

    .content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
</style>

<div class="topbar">
    📘 Army War College, Mhow
</div>

<div class="layout-container">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar @PermissionStyling.GetBootstrapClassesForPermission(AuthenticationState.User.Permissions)">
                <a href="/">🏠 Dashboard</a>
                <a href="/users">👥 Users</a>
                <a href="/notifications">🔔 Notifications</a>
                <a href="/settings">⚙️ Settings</a>
                <a href="/logout">🚪 Logout</a>
            </div>
            <div class="main-content">
                <article class="content px-4">
                    @Body
                </article>
            </div>
        </Authorized>
        <Authorizing>
            <div class="main-content p-4 text-muted">Authorizing...</div>
        </Authorizing>
    </AuthorizeView>
</div>
